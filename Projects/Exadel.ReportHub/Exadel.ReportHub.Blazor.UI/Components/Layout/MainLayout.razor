@inject IClientsService ClientsService
@inject IUserStateService UserStateService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inherits LayoutComponentBase

<div class="d-flex vh-100">
    <aside class="sidebar bg-dark text-white d-flex flex-column">
        <div class="brand p-4 text-center">
            <a href="/" class="text-white text-decoration-none">
                <h4>ReportHub</h4>
            </a>
        </div>
        <nav class="nav flex-column px-2">
            <NavLink href="/" class="nav-link" Match="NavLinkMatch.All">
                <span class="bi bi-house-fill me-2"></span>Home
            </NavLink>

            <AuthorizeView>
                <Authorized>
                    <NavLink href="/items" class="nav-link">
                        <span class="bi bi-card-list me-2"></span>Items
                    </NavLink>
                    <NavLink href="/customers" class="nav-link">
                        <span class="bi bi-people-fill me-2"></span>Customers
                    </NavLink>
                    <NavLink href="/invoices" class="nav-link">
                        <span class="bi bi-receipt-cutoff me-2"></span>Invoices
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </nav>

        <div class="mt-auto p-3">
            <AuthorizeView>
                <NotAuthorized>
                    <a href="/login" class="btn btn-outline-light w-100 mb-2">
                        <span class="bi bi-box-arrow-in-right me-1"></span>Login
                    </a>
                </NotAuthorized>
                <Authorized>
                    <a href="/logout" class="btn btn-outline-light w-100">
                        <span class="bi bi-box-arrow-right me-1"></span>Logout
                    </a>
                </Authorized>
            </AuthorizeView>
        </div>
    </aside>

    <div class="flex-fill d-flex flex-column">
        <header class="header bg-white shadow-sm px-4 py-2">
            <h5 class="mb-0">Welcome, "User"</h5>
        </header>

        <main class="flex-fill overflow-auto p-4 bg-light">
            @Body
        </main>
    </div>
</div>